{
    "name": "@snippets/mobile",
    "main": "expo-router/entry",
    "version": "1.0.0",
    "scripts": {
        "start": "expo start",
        "android": "expo run:android",
        "ios": "expo run:ios",
        "web": "expo start --web",
        "test": "jest --watchAll",
        "lint": "expo lint",
        "prepare": "husky",
        "db:gen-types": "bunx supabase gen types typescript --local | tee lib/supabase.types.ts ../web/src/lib/supabase.types.ts",
        "db:seed": "bun scripts/seeds/index.ts",
        "db:init:local": "bunx supabase db reset && bun run db:gen-types && bun run db:seed",
        "db:init:prod": "bunx supabase db reset --linked && bun run db:gen-types && NODE_ENV=production bun run db:seed",
        "build:dev": "eas build --profile development-simulator --platform ios --local"
    },
    "jest": {
        "preset": "jest-expo"
    },
    "expo": {
        "doctor": {
            "reactNativeDirectoryCheck": {
                "exclude": [
                    "@react-native-community/blur",
                    "react-native-webrtc"
                ],
                "listUnknownPackages": false
            }
        }
    },
    "dependencies": {
        "@ai-sdk/google": "^1.1.11",
        "@ai-sdk/react": "^1.1.12",
        "@config-plugins/react-native-webrtc": "^10.0.0",
        "@expo/vector-icons": "^14.0.2",
        "@gorhom/bottom-sheet": "^5.0.6",
        "@react-native-async-storage/async-storage": "1.23.1",
        "@react-native-community/blur": "^4.4.1",
        "@react-native-community/cli": "^15.1.3",
        "@react-navigation/native": "^7.0.14",
        "@supabase/supabase-js": "^2.48.1",
        "@types/base-64": "^1.0.2",
        "@types/react-syntax-highlighter": "^15.5.13",
        "ai": "^4.1.35",
        "base-64": "^1.0.0",
        "expo": "~52.0.28",
        "expo-apple-authentication": "~7.1.3",
        "expo-av": "~15.0.2",
        "expo-blur": "~14.0.3",
        "expo-dev-client": "~5.0.11",
        "expo-file-system": "~18.0.9",
        "expo-font": "~13.0.3",
        "expo-image": "~2.0.4",
        "expo-linear-gradient": "~14.0.2",
        "expo-linking": "~7.0.5",
        "expo-router": "~4.0.17",
        "expo-screen-orientation": "~8.0.4",
        "expo-speech": "~13.0.1",
        "expo-splash-screen": "~0.29.21",
        "expo-status-bar": "~2.0.1",
        "expo-system-ui": "~4.0.7",
        "expo-video": "~2.0.5",
        "expo-video-thumbnails": "~9.0.3",
        "expo-web-browser": "~14.0.2",
        "ffmpeg-kit-react-native": "^6.0.2",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-native": "0.76.6",
        "react-native-code-highlighter": "^1.2.3",
        "react-native-gesture-handler": "~2.20.2",
        "react-native-paper": "^5.13.1",
        "react-native-reanimated": "~3.16.1",
        "react-native-safe-area-context": "4.12.0",
        "react-native-screens": "~4.4.0",
        "react-native-url-polyfill": "^2.0.0",
        "react-native-view-shot": "~4.0.3",
        "react-native-web": "~0.19.13",
        "react-native-webrtc": "^124.0.5",
        "react-syntax-highlighter": "^15.6.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
        "@types/react": "~18.3.12",
        "@types/react-native-vector-icons": "^6.4.18",
        "eslint": "^8.57.0",
        "eslint-config-expo": "~8.0.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "husky": "^9.1.7",
        "jest": "^29.2.1",
        "jest-expo": "~52.0.3",
        "prettier": "3.4.2",
        "react-test-renderer": "18.3.1",
        "typescript": "~5.3.3",
        "typescript-eslint": "^8.22.0"
    },
    "private": true
}
